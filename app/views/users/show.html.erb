<div class="user_details">
  <%= render 'shared/user_details'%>
  <section class="user_bio">
    <h3>Bio:</h3>
    <p><%= @user.bio %></p>
  </section>
  <section class="user_posts">
    <% @user.three_last_posts.each_with_index do |post, index| %>
      <div class="post_details">
        <h3>Post#<%= index %>: <%= post.title %></h3>
        <p><%= post.text %></p>
      </div>
    <% end %>
  </section>
  <%= link_to "See all posts", user_posts_path(@user) %>
</div>